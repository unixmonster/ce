{
    "compilerOptions": {
        "module": "CommonJS",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": false,
        "target": "ES2020",
        "inlineSourceMap": true,
        //"sourceMap": true,
        "outDir": "./dist",
        "sourceRoot": "./src",
        "incremental": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "source",
        "inspiration"
    ]
}
