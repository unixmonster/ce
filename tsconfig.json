{
  "compilerOptions": {
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "inlineSourceMap": true,
    "outDir": "./dist",
    "sourceRoot": "./src",
    "incremental": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
  },
  "exclude": ["node_modules", "dist"]
}



