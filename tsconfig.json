{
  "compilerOptions": {
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": false,
    "target": "es2020",
    "inlineSourceMap": true,
    "outDir": "./dist",
    "sourceRoot": "./src",
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
